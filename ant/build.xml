        <zipfileset src="${temporary_classes_dir}/derbyclient.jar" />
        <zipfileset src="${temporary_classes_dir}/markdownj.jar" />
    </jar>
    <chmod file="${target_jars_dir}/Warenlagerclient.jar" perm="a+x" />
