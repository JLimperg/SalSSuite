        <zipfileset src="${temporary_classes_dir}/derbyclient.jar" />
        <zipfileset src="${temporary_classes_dir}/markdownj.jar" />
    </jar>
    <chmod file="${target_jars_dir}/Zollclient.jar" perm="a+x" />
</target>

<target name="jarmagazineclient" depends="movetoonedir"
